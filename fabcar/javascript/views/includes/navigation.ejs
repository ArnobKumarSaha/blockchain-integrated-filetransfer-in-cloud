<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/user/upload' ? 'active' : '' %>" href="/user/upload">Upload file
                </a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/user/download' ? 'active' : '' %>" href="/user/download">Download file
                </a>
            </li>

            <li class="main-header__item">
                <a class="<%= path === '/user/uploaded' ? 'active' : '' %>" href="/user/uploaded">My Uploaded Files</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/user/downloaded' ? 'active' : '' %>" href="/user/downloaded">My Downloaded Files</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/user/notification' ? 'active' : '' %>" href="/user/notification">My Notifications</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/user/request' ? 'active' : '' %>" href="/user/request">My Requests</a>
            </li>
        </ul>

        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <ul class="main-header__item-list">

            <% if (!isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <h3> Hello <%= profileName %> </h3>
                </li>
                
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button id="logout" type="submit">Logout</button>
                    </form>
                </li>

            <% } %>
        </ul>
    </nav>
</header>

